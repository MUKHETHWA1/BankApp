<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBalanceActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:text="Check Balance"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackCheckBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edAccIdBalance"
        android:layout_width="231dp"
        android:layout_height="75dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Enter Accout ID"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvDisplayBalance"
        android:layout_width="231dp"
        android:layout_height="133dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/edAccIdBalance"
        app:layout_constraintStart_toStartOf="@+id/edAccIdBalance"
        app:layout_constraintTop_toBottomOf="@+id/edAccIdBalance" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Check Balance"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDisplayBalance"
        app:layout_constraintStart_toStartOf="@+id/tvDisplayBalance"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayBalance" />
</androidx.constraintlayout.widget.ConstraintLayout>