<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankOptionsActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Select Any Options: "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnCheckBalance"
        android:layout_width="212dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:text="1 Check Balance"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnWithdraw"
        android:layout_width="212dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:text="2 Withdraw"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btnCheckBalance"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btnCheckBalance"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckBalance" />

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="212dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:text="3 Deposit"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btnWithdraw"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btnWithdraw"
        app:layout_constraintTop_toBottomOf="@+id/btnWithdraw" />

    <Button
        android:id="@+id/btnAccRegister"
        android:layout_width="212dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:text="4 Acc Register"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btnDeposit"
        app:layout_constraintStart_toStartOf="@+id/btnDeposit"
        app:layout_constraintTop_toBottomOf="@+id/btnDeposit" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="212dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:text="5 Exit"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btnAccRegister"
        app:layout_constraintStart_toStartOf="@+id/btnAccRegister"
        app:layout_constraintTop_toBottomOf="@+id/btnAccRegister" />
</androidx.constraintlayout.widget.ConstraintLayout>